<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loginblur"
    tools:context=".UI.Activity.AcitvityLogin">


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/roundshape"
        android:alpha="0.6"
        android:allowUndo="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:hint="Username"
        android:id="@+id/et_login_name"
        android:textSize="25dp"
        android:textColor="#dbe0e4"
        android:textIsSelectable="false"
        android:drawableLeft="@drawable/username"
        android:drawablePadding="10dp"
        />

    <EditText

        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/roundshape"
        android:alpha="0.6"
        android:inputType=""
        android:layout_below="@+id/et_login_name"
        android:layout_alignLeft="@+id/et_login_name"
        android:layout_alignStart="@+id/et_login_name"
        android:layout_marginTop="40dp"
        android:hint="Password"
        android:phoneNumber="false"
        android:textSize="25dp"
        android:textColor="#dbe0e4"
        android:id="@+id/et_login_password"
        android:textIsSelectable="false"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="10dp"

        />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:id="@+id/btn_sign_up"
        android:layout_below="@+id/et_login_password"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="57dp"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:background="@drawable/roundshape"/>


</RelativeLayout>


